---
import MainLayout from "./MainLayout.astro";
import NotesNavigation from "../components/NotesNavigation.astro";
// const { frontmatter } = Astro.props;
export async function getStaticPaths({ paginate }) {
    const allNotesPages = await Astro.glob('../notes/**/*.md');
    return paginate(allNotesPages, { pageSize: 1 });
}
const { frontmatter, page, url} = Astro.props;
---
<MainLayout pageTitle={frontmatter.title} pageDescription={frontmatter.description}>
    <main>
        <h1>{frontmatter.section}</h1>
        <section class="cards">
            <section class="card">
                <h2>{frontmatter.title}</h2>
                <p>{frontmatter.description}</p>
            </section>
            <section class="card">
                <h2>Tags</h2>
                <section>
                    {frontmatter.tags.map((tag) => (<a class="tag" href={`/tags/${tag}`}>{tag}</a>))}
                </section>
            </section>
        </section>
        <slot />
        <!-- <NotesNavigation /> -->
        <NotesNavigation prevUrl={page.url.prev} nextUrl={page.url.next}/> <!--added -->
    </main>
</MainLayout>

<style>
    .cards {
        width: 100%;
        height: 120px;
        display: grid;
        grid-template-columns: 300px 40px 300px;
        grid-template-rows: 120px;
    }

    .card {
        width: 300px;
        height: 120px;
        padding: 0px 15px 0px;
        border-radius: 10px;
        background-color: var(--card-colour);
    }

    .card:nth-of-type(1) {
        grid-column: 1/2;
        grid-row: 1/2;
    }

    .card:nth-of-type(2) {
        grid-column: 3/4;
        grid-row: 1/2;
    }

    .tag {
        margin: 0 10px 5px 0;
        display: inline-block;
        font-size: 14px;
    }

    @media screen and (max-width: 660px) {
        .cards {height: 260px; grid-template-rows: 120px 20px 120px;}
        .card:nth-of-type(1) {grid-column: 1/2; grid-row: 1/2;}
        .card:nth-of-type(2) {grid-column: 1/2; grid-row: 3/4;}
    }
</style>